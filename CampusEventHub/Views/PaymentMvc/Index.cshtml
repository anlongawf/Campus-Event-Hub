@{
    ViewData["Title"] = "Demo PayOS Integration";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f5f7fa;
            padding: 40px 0;
        }
        .demo-container {
            max-width: 800px;
            margin: 0 auto;
        }
        .demo-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            padding: 30px;
            margin-bottom: 30px;
        }
        .demo-header {
            text-align: center;
            margin-bottom: 40px;
        }
        .demo-header h1 {
            color: #333;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .demo-header p {
            color: #666;
            font-size: 14px;
        }
        .option-card {
            border: 2px solid #e0e0e0;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 20px;
            transition: all 0.3s;
            cursor: pointer;
            text-align: center;
        }
        .option-card:hover {
            border-color: #667eea;
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.2);
        }
        .option-icon {
            font-size: 48px;
            color: #667eea;
            margin-bottom: 20px;
        }
        .option-title {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }
        .option-desc {
            color: #666;
            font-size: 14px;
            margin-bottom: 20px;
        }
        .btn-demo {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s;
        }
        .btn-demo:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            color: white;
        }
        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }
        .feature-item {
            text-align: center;
            padding: 20px;
        }
        .feature-icon {
            font-size: 32px;
            color: #667eea;
            margin-bottom: 10px;
        }
        .feature-text {
            font-size: 14px;
            color: #666;
        }
        .api-info {
            background: #f8f9fa;
            border-left: 4px solid #667eea;
            padding: 20px;
            border-radius: 8px;
            margin-top: 30px;
        }
        .api-info h5 {
            color: #333;
            margin-bottom: 15px;
        }
        .api-endpoint {
            background: white;
            padding: 12px;
            border-radius: 5px;
            font-family: 'Courier New', monospace;
            font-size: 13px;
            color: #667eea;
            margin: 10px 0;
            word-break: break-all;
        }
        .badge-method {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 5px;
            font-size: 11px;
            font-weight: bold;
            margin-right: 10px;
        }
        .badge-post {
            background: #4CAF50;
            color: white;
        }
        .badge-get {
            background: #2196F3;
            color: white;
        }
    </style>
</head>
<body>
<div class="demo-container">
    <div class="demo-header">
        <h1><i class="fa fa-rocket"></i> PayOS Integration Demo</h1>
        <p>Test và trải nghiệm tích hợp thanh toán PayOS</p>
    </div>

    <div class="demo-card">
        <div class="row">
            <div class="col-md-6">
                <div class="option-card" onclick="window.location.href='/PaymentMvc/TopUp'">
                    <div class="option-icon">
                        <i class="fa fa-wallet"></i>
                    </div>
                    <div class="option-title">Nạp tiền vào ví</div>
                    <div class="option-desc">
                        Người dùng tự nhập số tiền và thanh toán.<br>
                        Mô tả tự động theo thời gian.
                    </div>
                    <a href="/PaymentMvc/TopUp" class="btn-demo">
                        Thử ngay <i class="fa fa-arrow-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-md-6">
                <div class="option-card" onclick="window.location.href='/PaymentMvc/Index'">
                    <div class="option-icon">
                        <i class="fa fa-ticket-alt"></i>
                    </div>
                    <div class="option-title">Thanh toán vé sự kiện</div>
                    <div class="option-desc">
                        Thanh toán với số tiền và mô tả cố định.<br>
                        Phù hợp cho đơn hàng có sẵn.
                    </div>
                    <a href="/PaymentMvc/Index" class="btn-demo">
                        Thử ngay <i class="fa fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="demo-card">
        <h4><i class="fa fa-star"></i> Tính năng nổi bật</h4>
        <div class="features">
            <div class="feature-item">
                <div class="feature-icon"><i class="fa fa-lock"></i></div>
                <div class="feature-text">Bảo mật cao với HMAC SHA256</div>
            </div>
            <div class="feature-item">
                <div class="feature-icon"><i class="fa fa-bolt"></i></div>
                <div class="feature-text">Xử lý nhanh chóng</div>
            </div>
            <div class="feature-item">
                <div class="feature-icon"><i class="fa fa-mobile-alt"></i></div>
                <div class="feature-text">Tương thích mọi thiết bị</div>
            </div>
            <div class="feature-item">
                <div class="feature-icon"><i class="fa fa-bell"></i></div>
                <div class="feature-text">Webhook realtime</div>
            </div>
        </div>
    </div>

    <div class="demo-card">
        <div class="api-info">
            <h5><i class="fa fa-code"></i> API Endpoints</h5>

            <div style="margin-bottom: 15px;">
                <span class="badge-method badge-post">POST</span>
                <strong>Tạo link thanh toán</strong>
                <div class="api-endpoint">
                    /api/Payment/CreatePaymentUrl
                </div>
            </div>

            <div style="margin-bottom: 15px;">
                <span class="badge-method badge-get">GET</span>
                <strong>Xử lý kết quả thanh toán</strong>
                <div class="api-endpoint">
                    /api/Payment/Return?orderCode={code}&status={status}
                </div>
            </div>

            <div style="margin-bottom: 15px;">
                <span class="badge-method badge-post">POST</span>
                <strong>Webhook nhận thông báo</strong>
                <div class="api-endpoint">
                    /api/Payment/Webhook
                </div>
            </div>

            <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid #e0e0e0;">
                <strong>Request Body Example:</strong>
                <pre style="background: white; padding: 15px; border-radius: 5px; margin-top: 10px; font-size: 12px;"><code>{
  "moneyToPay": 50000,
  "description": "Nap tien 18/10/2024 14:30:25"
}</code></pre>
            </div>
        </div>
    </div>

    <div class="demo-card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
        <h4 style="color: white;"><i class="fa fa-question-circle"></i> Cần hỗ trợ?</h4>
        <p style="color: rgba(255,255,255,0.9); margin-bottom: 20px;">
            Nếu bạn gặp vấn đề trong quá trình tích hợp hoặc thanh toán, hãy liên hệ với chúng tôi.
        </p>
        <div style="display: flex; gap: 15px; flex-wrap: wrap;">
            <a href="https://payos.vn/docs" target="_blank" class="btn-demo" style="background: white; color: #667eea;">
                <i class="fa fa-book"></i> Tài liệu
            </a>
            <a href="mailto:support@payos.vn" class="btn-demo" style="background: rgba(255,255,255,0.2); border: 2px solid white;">
                <i class="fa fa-envelope"></i> Liên hệ
            </a>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>