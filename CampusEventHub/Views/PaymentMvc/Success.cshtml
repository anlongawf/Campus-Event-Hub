@{
    ViewData["Title"] = "Thanh toán thành công";
}

<div class="min-vh-100 d-flex align-items-center" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg border-0 text-center" style="border-radius: 20px; overflow: hidden;">
                    <!-- Success Animation -->
                    <div class="card-body p-5">
                        <div class="success-animation mb-4">
                            <div class="success-icon">
                                <i class="fas fa-check"></i>
                            </div>
                        </div>
                        
                        <h2 class="text-success fw-bold mb-3">Thanh toán thành công!</h2>
                        <p class="text-muted mb-4">Giao dịch của bạn đã được xử lý thành công</p>

                        <!-- Success Info -->
                        <div class="success-info mb-4">
                            <div class="d-flex align-items-center justify-content-center mb-3">
                                <div class="info-icon me-3">
                                    <i class="fas fa-receipt"></i>
                                </div>
                                <h5 class="mb-0 fw-bold text-dark">Giao dịch hoàn tất</h5>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-3">
                            <a href="/Event" class="btn btn-primary btn-lg">
                                <i class="fas fa-calendar-alt me-2"></i>
                                Xem sự kiện khác
                            </a>
                            <a href="/" class="btn btn-outline-primary">
                                <i class="fas fa-home me-2"></i>
                                Về trang chủ
                            </a>
                        </div>

                        <!-- Support Info -->
                        <div class="support-info mt-5 pt-4 border-top">
                            <small class="text-muted">
                                <i class="fas fa-headset me-1"></i>
                                Cần hỗ trợ? Liên hệ: <strong>support@campuseventhub.com</strong>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.success-animation {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
}

.success-icon {
    width: 100px;
    height: 100px;
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: successPulse 2s ease-in-out infinite;
    box-shadow: 0 0 30px rgba(40, 167, 69, 0.3);
}

.success-icon i {
    font-size: 3rem;
    color: white;
    animation: successCheck 0.6s ease-in-out;
}

@@keyframes successPulse {
    0% {
        transform: scale(1);
        box-shadow: 0 0 30px rgba(40, 167, 69, 0.3);
    }
    50% {
        transform: scale(1.05);
        box-shadow: 0 0 40px rgba(40, 167, 69, 0.5);
    }
    100% {
        transform: scale(1);
        box-shadow: 0 0 30px rgba(40, 167, 69, 0.3);
    }
}

@@keyframes successCheck {
    0% {
        transform: scale(0);
        opacity: 0;
    }
    50% {
        transform: scale(1.2);
        opacity: 1;
    }
    100% {
        transform: scale(1);
        opacity: 1;
    }
}

.info-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.2rem;
}

.btn-lg {
    border-radius: 12px;
    font-weight: 600;
    padding: 0.75rem 1.5rem;
    transition: all 0.3s ease;
}

.btn-primary {
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    border: none;
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 123, 255, 0.4);
}

.btn-outline-primary {
    border: 2px solid #007bff;
    color: #007bff;
    border-radius: 12px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-outline-primary:hover {
    background: #007bff;
    border-color: #007bff;
    transform: translateY(-2px);
}

.card {
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.95);
    animation: slideInUp 0.6s ease-out;
}

@@keyframes slideInUp {
    0% {
        transform: translateY(50px);
        opacity: 0;
    }
    100% {
        transform: translateY(0);
        opacity: 1;
    }
}

.support-info {
    background: rgba(248, 249, 250, 0.8);
    border-radius: 10px;
    padding: 1rem;
}

@@media (max-width: 768px) {
    .container {
        padding: 1rem;
    }
    
    .card-body {
        padding: 3rem 2rem;
    }
    
    .success-icon {
        width: 80px;
        height: 80px;
    }
    
    .success-icon i {
        font-size: 2.5rem;
    }
    
    h2 {
        font-size: 1.5rem;
    }
}
</style>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>