@model CampusEventHub.Models.User
@{
    ViewData["Title"] = "Thông tin cá nhân";
}
<body>
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card profile-card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header text-white text-center py-4">
                    <h3 class="mb-0 fw-bold">
                        <i class="bi bi-person-badge me-2"></i>Thông tin cá nhân
                    </h3>
                </div>

                <div class="card-body bg-white p-4">
                    <div class="text-center mb-4">
                        <img src="https://cdn-icons-png.flaticon.com/512/3177/3177440.png"
                             alt="Avatar" class="avatar shadow-sm mb-3">
                        <h4 class="text-primary mb-1 fw-bold">@Model.UserName</h4>
                        <small class="text-muted d-block">@Model.Email</small>
                    </div>

                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-star-fill text-warning me-2"></i>Điểm rèn luyện</span>
                            <span class="badge bg-info text-dark fs-6">@Model.TrainningPoint</span>
                        </li>

                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-wallet2 text-success me-2"></i>Số dư tài khoản</span>
                            <span class="fw-bold text-success">@Model.Balance.ToString("N0") ₫</span>
                        </li>

                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-calendar-event text-primary me-2"></i>Ngày đăng ký</span>
                            <span>@Model.RegistrationDate.ToString("dd/MM/yyyy")</span>
                        </li>

                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-shield-check text-secondary me-2"></i>Trạng thái xác thực</span>
                            @if (Model.IsVerified)
                            {
                                <span class="badge bg-success fs-6">✅ Đã xác thực</span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6">❌ Chưa xác thực</span>
                            }
                        </li>
                    </ul>

                    <div class="text-center mt-3">
                        <p class="fw-semibold"
                           style="color:@(Model.TrainningPoint >= 100 ? "green" : "red")">
                            @ViewBag.Message
                        </p>
                    </div>

                    <div class="d-grid mt-3">
                        <a href="/" class="btn btn-outline-primary rounded-pill py-2">
                            <i class="bi bi-arrow-left-circle me-1"></i> Quay lại trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
