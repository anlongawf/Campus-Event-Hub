@model IEnumerable<CampusEventHub.Models.Event>

<div class="text-center">
    <h1 class="display-4">Welcome @ViewBag.Username</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container mt-4">
    <h2 class="text-center mb-4">Danh sách sự kiện</h2>

    <div class="row">
        @foreach (var ev in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-lg border-0 rounded-3 event-card">
                    <img src="@ev.ImageUrl" class="card-img-top" alt="@ev.EventName" style="height:200px; object-fit:cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-primary">@ev.EventName</h5>
                        <p class="card-text text-muted text-truncate" style="max-height: 60px; overflow:hidden;">
                            @ev.Description
                        </p>
                        <p class="mb-1"><i class="bi bi-geo-alt-fill text-danger"></i> <strong>@ev.Location</strong></p>
                        <p class="mb-1"><i class="bi bi-calendar-event text-success"></i> @ev.EventDate.ToString("dd/MM/yyyy")</p>
                        <p class="mb-2">
                    <span class="badge bg-warning text-dark">
                        <i class="bi bi-award"></i> @ev.TrainningPoint điểm
                    </span>
                        </p>
                        <a href="@Url.Action("Events", "Home", new { id = ev.EventId })" class="btn btn-outline-primary mt-auto w-100">
                            <i class="bi bi-eye"></i> Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>