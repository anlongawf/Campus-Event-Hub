@{
    ViewData["Title"] = "Campus Event Hub - Trang chủ";
    var upcomingEvents = ViewBag.UpcomingEvents as List<CampusEventHub.Models.Event>;
    var featuredEvents = ViewBag.FeaturedEvents as List<CampusEventHub.Models.Event>;
}

<!-- Hero Section -->
<section class="hero-section-main">
    <div class="container hero-content">
        <div class="row align-items-center">
            <div class="w-100 text-center col-lg-6">
                <h1 class="display-3 fw-bold mb-4 animate-fade-in">
                    Campus Event Hub
                </h1>
                <p class="lead mb-4 animate-fade-in-delay">
                    Nơi kết nối các sự kiện học đường, tích lũy điểm rèn luyện và tạo nên những kỷ niệm đáng nhớ
                </p>
                <div class="animate-fade-in-delay-2">
                    <a asp-controller="Event" asp-action="Index" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-calendar-alt"></i> Xem sự kiện
                    </a>
                    <a href="#about" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-info-circle"></i> Tìm hiểu thêm
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <div class="stat-icon bg-primary">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <h3 class="stat-number">@ViewBag.TotalEvents</h3>
                    <p class="stat-label">Tổng sự kiện</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <div class="stat-icon bg-success">
                        <i class="fas fa-clock"></i>
                    </div>
                    <h3 class="stat-number">@ViewBag.UpcomingCount</h3>
                    <p class="stat-label">Sắp diễn ra</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <div class="stat-icon bg-warning">
                        <i class="fas fa-chair"></i>
                    </div>
                    <h3 class="stat-number">@ViewBag.TotalSeats</h3>
                    <p class="stat-label">Tổng số ghế</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <div class="stat-icon bg-info">
                        <i class="fas fa-ticket-alt"></i>
                    </div>
                    <h3 class="stat-number">@ViewBag.AvailableSeats</h3>
                    <p class="stat-label">Ghế còn trống</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Events Section -->
@if (featuredEvents != null && featuredEvents.Any())
{
    <section class="featured-section py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="section-title">
                    <i class="fas fa-star text-warning"></i>
                    Sự kiện nổi bật
                </h2>
                <p class="section-subtitle">Các sự kiện có điểm rèn luyện cao nhất</p>
            </div>
            <div class="row">
                @foreach (var evt in featuredEvents)
                {
                    <div class="col-md-4 mb-4">
                        <div class="event-card featured-card">
                            <div class="event-badge">
                                <i class="fas fa-star"></i> Nổi bật
                            </div>
                            @if (!string.IsNullOrEmpty(evt.ImageUrl))
                            {
                                <img src="@evt.ImageUrl" class="event-image" alt="@evt.EventName">
                            }
                            else
                            {
                                <div class="event-image-placeholder">
                                    <i class="fas fa-calendar-alt"></i>
                                </div>
                            }
                            <div class="event-content">
                                <h5 class="event-title">@evt.EventName</h5>
                                <p class="event-description">@evt.Description</p>
                                <div class="event-meta">
                                    <div class="event-meta-item">
                                        <i class="fas fa-calendar"></i>
                                        <span>@evt.EventDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                    <div class="event-meta-item">
                                        <i class="fas fa-clock"></i>
                                        <span>@evt.EventDate.ToString("HH:mm")</span>
                                    </div>
                                    <div class="event-meta-item">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span>@evt.Location</span>
                                    </div>
                                </div>
                                <div class="event-footer">
                                    <span class="badge badge-points">
                                        <i class="fas fa-medal"></i> @evt.TrainningPoint điểm
                                    </span>
                                    <a asp-controller="Event" asp-action="SelectSeat" asp-route-id="@evt.EventId" class="btn btn-sm btn-primary">
                                        Đăng ký <i class="fas fa-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Upcoming Events Section -->
@if (upcomingEvents != null && upcomingEvents.Any())
{
    <section class="upcoming-section py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="section-title">
                    <i class="fas fa-calendar-check text-primary"></i>
                    Sự kiện sắp diễn ra
                </h2>
                <p class="section-subtitle">Đừng bỏ lỡ các sự kiện thú vị sắp tới</p>
            </div>
            <div class="row">
                @foreach (var evt in upcomingEvents)
                {
                    <div class="col-md-4 mb-4">
                        <div class="event-card">
                            @if (!string.IsNullOrEmpty(evt.ImageUrl))
                            {
                                <img src="@evt.ImageUrl" class="event-image" alt="@evt.EventName">
                            }
                            else
                            {
                                <div class="event-image-placeholder">
                                    <i class="fas fa-calendar-alt"></i>
                                </div>
                            }
                            <div class="event-content">
                                <h5 class="event-title">@evt.EventName</h5>
                                <p class="event-description">@evt.Description</p>
                                <div class="event-meta">
                                    <div class="event-meta-item">
                                        <i class="fas fa-calendar"></i>
                                        <span>@evt.EventDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                    <div class="event-meta-item">
                                        <i class="fas fa-clock"></i>
                                        <span>@evt.EventDate.ToString("HH:mm")</span>
                                    </div>
                                    <div class="event-meta-item">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span>@evt.Location</span>
                                    </div>
                                </div>
                                <div class="event-footer">
                                    <span class="badge badge-points">
                                        <i class="fas fa-medal"></i> @evt.TrainningPoint điểm
                                    </span>
                                    <a asp-controller="Event" asp-action="SelectSeat" asp-route-id="@evt.EventId" class="btn btn-sm btn-primary">
                                        Đăng ký <i class="fas fa-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-4">
                <a asp-controller="Event" asp-action="Index" class="btn btn-outline-primary btn-lg">
                    Xem tất cả sự kiện <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </section>
}

<!-- About Section -->
<section id="about" class="about-section py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h2 class="section-title mb-4">Về Campus Event Hub</h2>
                <p class="lead">
                    Campus Event Hub là nền tảng quản lý và đăng ký sự kiện học đường hàng đầu,
                    giúp sinh viên dễ dàng tham gia các hoạt động và tích lũy điểm rèn luyện.
                </p>
                <div class="feature-list mt-4">
                    <div class="feature-item">
                        <i class="fas fa-check-circle text-success"></i>
                        <span>Đăng ký sự kiện dễ dàng và nhanh chóng</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle text-success"></i>
                        <span>Chọn ghế ngồi theo sở thích</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle text-success"></i>
                        <span>Tích lũy điểm rèn luyện tự động</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle text-success"></i>
                        <span>Theo dõi lịch sử tham gia sự kiện</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-image">
                    <i class="fas fa-users" style="font-size: 250px; color: #0d6efd; opacity: 0.1;"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container text-center">
        <h2 class="text-white mb-4">Sẵn sàng tham gia sự kiện?</h2>
        <p class="text-white lead mb-4">Khám phá và đăng ký các sự kiện thú vị ngay hôm nay!</p>
        <a asp-controller="Event" asp-action="Index" class="btn btn-light btn-lg">
            <i class="fas fa-rocket"></i> Bắt đầu ngay
        </a>
    </div>
</section>