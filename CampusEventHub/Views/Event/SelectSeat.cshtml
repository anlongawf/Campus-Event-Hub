@model CampusEventHub.Models.Event

@{
    ViewData["Title"] = "Chi tiết sự kiện - " + Model.EventName;
}


<body class="bg-light">

<div class="container py-5">
    <div class="row g-4">
        <!-- Hình ảnh sự kiện -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <img src="@Model.ImageUrl" alt="@Model.EventName" class="card-img-top rounded">
            </div>
        </div>

        <!-- Thông tin sự kiện -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h2 class="card-title mb-3">@Model.EventName</h2>

                    <p class="text-muted mb-2">
                        <i class="bi bi-calendar-event"></i>
                        @Model.EventDate.ToString("dd/MM/yyyy HH:mm")
                    </p>

                    <p class="card-text">
                        @if (Model.Price == null || Model.Price == 0)
                        {
                            <span class="badge bg-success">Giá ghế: Miễn Phí</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Giá ghế: @Model.Price</span>
                        }
                    </p>

                    <p class="text-muted mb-2">
                        <i class="bi bi-geo-alt"></i>
                        @Model.Location
                    </p>

                    <p class="mb-3">
                        <span class="badge bg-success">
                            @Model.TrainningPoint điểm rèn luyện
                        </span>
                    </p>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <!-- mô tả rút gọn -->
                        <p id="desc-short" class="card-text">
                            @(Model.Description.Length > 25
                                ? Model.Description.Substring(0, 25) + "..."
                                : Model.Description)
                        </p>

                        <!-- mô tả đầy đủ -->
                        <p id="desc-full" class="card-text d-none">
                            @Model.Description
                        </p>

                        <!-- nút toggle -->
                        <button type="button" class="btn btn-link p-0" id="toggle-desc">
                            Xem thêm
                        </button>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có mô tả cho sự kiện này.</p>
                    }

                    <div class="mt-4">
                        <a href="@Url.Action("SelectSeat", "Event", new { id = Model.EventId })"
                           class="btn btn-primary btn-lg">
                            <i class="bi bi-ticket-perforated"></i> Đặt ghế ngay
                        </a>
                        <a href="@Url.Action("Index", "Event")" class="btn btn-outline-secondary btn-lg ms-2">
                            <i class="bi bi-arrow-left"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const shortDesc = document.getElementById("desc-short");
        const fullDesc = document.getElementById("desc-full");
        const toggleBtn = document.getElementById("toggle-desc");

        if (toggleBtn) {
            toggleBtn.addEventListener("click", function () {
                if (fullDesc.classList.contains("d-none")) {
                    shortDesc.classList.add("d-none");
                    fullDesc.classList.remove("d-none");
                    toggleBtn.textContent = "Thu gọn";
                } else {
                    shortDesc.classList.remove("d-none");
                    fullDesc.classList.add("d-none");
                    toggleBtn.textContent = "Xem thêm";
                }
            });
        }
    });
</script>
